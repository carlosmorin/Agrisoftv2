= simple_form_for(@carrier, data: { controller: 'masks' }) do |f|
	.form-group  
		.row
			.col-lg-12
				= f.input :name, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm ' }
		.row.mt-2
			.col-lg-6
				= f.input :rfc, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm', maxlength: "13", placeholder: "XAXX010101000" }
			.col-lg-6
				= f.input :phone, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm phone_mask' }
	.form-group  
		.row
			.col-lg-12.mt-1
				h6.bold.mb-0 Direcci√≥n
		.row
			.col-md-6
				= f.input :country, collection: Country.all, selected: 1,	 input_html: { class: 'form-control form-control-sm'}
			.col-md-6
				= f.input :state, input_html: { class: 'form-control form-control-sm'}
		.row.mt-2
			.col-lg-6
				= f.input :cp, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm cp_mask' }
			.col-lg-6
				= f.input :municipality, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm' }
		.row.mt-2
			.col-lg-12		
				= f.input :address, required: true, autofocus: true, input_html: { class: 'form-control form-control-sm' }
	.form-group.mb-0  
		.row
			.col-lg-12.mt-1
				h6.bold.mb-0 Permisos
			.col-md-6
				= f.input :caat, autofocus: true, input_html: { class: 'form-control form-control-sm' }
			.col-md-6
				= f.input :alpha, autofocus: true, input_html: { class: 'form-control form-control-sm' }
		.row.mt-2
			.col-md-6
				= f.input :iccmx, autofocus: true, input_html: { class: 'form-control form-control-sm' }
			.col-md-6
				= f.input :usdot, autofocus: true, input_html: { class: 'form-control form-control-sm' }
		hr
		.form-actions.text-center
			button.btn.btn-dark-blue.btn-sm.mr-2.pl-1 type="submit"
