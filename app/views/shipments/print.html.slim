					tr
						th width="100%" colspan="2"
							hr.my-0
	tbody.mt-0.pt-0 
		tr
			th
				table.pt-0 width="100%"
					tr
						th.text-left width="100%"
							table width="100%"
								tr
									th.text-right width="13%"
										b.mt-0.mr-1.pt-0 REMITENTE:
									th width="87%"
