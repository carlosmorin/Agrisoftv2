					tr
						th.text-right width="15%"
							b.mt-1.mr-1 DOMICILIO:
						th.text-left width="85%"
							span.text-normal.pr-3 = @freight.carrier.full_address.upcase
					tr
						th.text-right width="15%"
							b.mt-1.mr-1 RFC:
						th.text-left width="85%"
							span.text-normal.pr-3.mr-2 = @freight.carrier.rfc.upcase
							b.mt-1.mr-1 TELÉFONO:
							span.text-normal.pr-3 = @freight.carrier.phone.upcase
		tr
			th
				table.mt-2 width="100%"
					tr
						th.text-right width="13%"
							b.mt-1.mr-1 OPERADOR:
						th.text-left width="87%"
							span.text-normal.pr-3.mr-2 = @freight.driver.full_name.upcase
							b.mt-1.mr-1 # LICENCIA:
							span.text-normal.pr-3.mr-2 = @freight.driver.licence.upcase
							b.mt-1.mr-1 TELÉFONO:
							span.text-normal.pr-3 = @freight.driver.phone.upcase
		tr
			th
				table width="100%"
					tr
						th.text-left width="30%"
							h4.mb-0 PERMISOS
							table.mt-1 width="100%"
								tr
									th width="25%"
										span CAAT:
									th width="75%"
										span.text-normal = @freight.carrier.caat.present? ? @freight.carrier.caat : '--'
								tr
									th width="25%"
										span ALPHA:
									th width="75%"
										span.text-normal = @freight.carrier.alpha.present? ? @freight.carrier.alpha : '--'
								tr
									th width="25%"
										span ICCMX:
									th width="75%"
										span.text-normal = @freight.carrier.iccmx.present? ? @freight.carrier.iccmx : '--'
								tr
									th width="25%"
										span USDOT:
									th width="75%"
										span.text-normal = @freight.carrier.usdot.present? ? @freight.carrier.usdot : '--'

						th.text-left width="35%"
							h4.mb-0 UNIDAD
							table.mt-1 width="100%"
								tr
									th width="35%"
										span MARCA:
									th width="65%"
										span.text-normal = @freight.unit.unit_brand.present? ? @freight.unit.unit_brand.name.upcase : '--'
								tr
									th width="35%"
										span AÑO:
									th width="65%"
