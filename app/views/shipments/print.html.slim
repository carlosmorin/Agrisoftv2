					tr
						th.text-left width="100%"
							table width="100%"
								tr
									th.text-right width="15%"
										b.mt-1.mr-1 DESTINATARIO:
									th width="85%"
										span.text-normal.pr-3 = @shipment.client.name.upcase
								tr
									th.text-right width="15%"
										b.mt-1.mr-1 DOMICILIO:
									th width="85%"
										span.text-normal.pr-3 = @shipment.client.full_address.upcase
								tr
									th.text-right width="15%"
										b.mt-1.mr-1 RFC:
									th width="85%"
