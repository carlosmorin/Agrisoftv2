				.row
					.col-lg-2
						label.mb-1 Calle:
					.col-lg-7.text-left
						p.mb-1 = @fiscal.address.street.upcase
				.row
					.col-lg-2
						label.mb-1 N° ext:
					.col-lg-7.text-left
						p.mb-1 = @fiscal.address.outdoor_number.upcase
				.row
					.col-lg-2
						label.mb-1 N° int:
