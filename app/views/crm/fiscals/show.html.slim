					.col-lg-2
						label.mb-1 País:
					.col-lg-7.text-left
						p.mb-1 = @fiscal.fiscalable.country.name.upcase
				.row
					.col-lg-2
						label.mb-1 Estado:
					.col-lg-7.text-left
						p.mb-1 = @fiscal.fiscalable.state.name.upcase
				.row
					.col-lg-2
						label.mb-1 Localidad/ciudad:
					.col-lg-7.text-left
						p.mb-1 = @fiscal.locality.upcase
				.row
					.col-lg-2
						label.mb-1 Codigo Postal:
					.col-lg-7.text-left
